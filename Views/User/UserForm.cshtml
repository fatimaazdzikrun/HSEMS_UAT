﻿@model HSEMS.Models.Person

@{
    ViewBag.Title = "UserForm";
    Layout = null;
}

@*<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>*@


<div class="modal-header bg-warning">
    <h5 class="modal-title" id="exampleModalLabel">
        @(Model.user_id == 0? "Add": "Edit") User
    </h5>

    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>

<form id="CreateUserForm" action="@Url.Action("SaveUser", "User")" method="post" style="background-color:antiquewhite">

    @Html.HiddenFor(m => m.user_id)
    <div class="modal-body">
        @*<div class="row" id="modalAlert" style="display: none;">
            <div class="col-lg-12">
                <div class="alert" id="modalMessage" role="alert"></div>
            </div>
        </div>*@


        <div class="form-group">
            <label>Username</label>
            <span class="required"> *</span>
            @if (Model.user_id == 0)
            {
                @Html.TextBoxFor(model => model.username, htmlAttributes: new { @class = "form-control form-control-border", required = "required", placeholder = "Username" })
            }
            else
            {
                @Html.TextBoxFor(model => model.username, htmlAttributes: new { @class = "form-control form-control-border", required = "required" })
            }

        </div>

        <div class="form-group">
            <label>Employee Id</label>
            <span class="required"> *</span>
            @if (Model.user_id == 0)
            {
                @Html.TextBoxFor(model => model.employee_id, htmlAttributes: new { @class = "form-control form-control-border", required = "required", placeholder = "Employee Id" });
            }
            else
            {
                @Html.TextBoxFor(model => model.employee_id, htmlAttributes: new { @class = "form-control form-control-border", required = "required" })
            }

        </div>

        <div class="form-group">
            <label>Password</label>
            <span class="required"> *</span>
            @if (Model.user_id == 0)
            {
                @Html.TextBoxFor(model => model.password, htmlAttributes: new { @type = "password", @class = "form-control form-control-border", required = "required", placeholder = "Password" });
            }
            else
            {
                @Html.TextBoxFor(model => model.password, htmlAttributes: new { @type = "password", @class = "form-control form-control-border", required = "required" })
            }

        </div>

        <div class="form-group">
            <label>Unit</label>
            <span class="required"> *</span>

            @Html.DropDownListFor(model => model.dept_id, (IEnumerable<SelectListItem>)ViewBag.unitUser, "--Select--", new { @class = "form-control form-select" })

        </div>
        <div class="form-group">
            <label>Sub Unit</label>
            <span class="required"> *</span>

            @Html.DropDownListFor(model => model.subunit_id, (IEnumerable<SelectListItem>)ViewBag.subunitUser, "--Select--", new { @class = "form-control form-select" })

        </div>


        <div class="form-group">
            <label>Team</label>
            <span class="required"> *</span>

            @Html.DropDownListFor(model => model.assg_team, (IEnumerable<SelectListItem>)ViewBag.teamUser, "--Select--", new { @class = "form-control form-select" })

        </div>

        <div class="form-group">
            <label>Role</label>
            <span class="required"> *</span>

            @Html.DropDownListFor(model => model.role_id, (IEnumerable<SelectListItem>)ViewBag.roleUser, "--Select--", new { @class = "form-control form-select" })

        </div>
    </div>



    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-bs-dismiss="modal">Close</button>
        <button class="btn btn-danger">Save</button>
    </div>
</form>



